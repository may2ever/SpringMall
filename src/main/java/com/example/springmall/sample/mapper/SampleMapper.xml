<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.example.springmall.sample.mapper.SampleMapper">
  <select id="selectSampleAll" resultType="com.example.springmall.sample.vo.Sample" parameterType="hashmap">
  	SELECT sample_no as sampleNo, sample_id as sampleId, sample_pw as samplePw From sample limit #{currentPage},#{rowPerPage}
  </select>
  <select id="selectSampleCount" resultType="int">
  	SELECT count(*) FROM sample
  </select>
  <delete id="deleteSample" parameterType="int">
  	DELETE FROM sample WHERE sample_no = #{sampleNo}
  </delete>
</mapper>